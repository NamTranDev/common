<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.example.commonframe"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.example.commonframe.view.spinner.WheelVerticalView
        android:id="@+id/f001_vertical_wheel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemsDimmedAlpha="50"
        app:visibleItems="8" />

    <TextView
        android:id="@+id/f001_tv_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f001_vertical_wheel"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/f001_tv_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f001_tv_vertical"
        android:layout_marginTop="20dp" />

    <com.example.commonframe.view.spinner.WheelHorizontalView
        android:id="@+id/f001_horizontal_wheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f001_tv_horizontal"
        android:layout_marginTop="20dp"
        app:selectionDividerWidth="20dp"
        app:itemsPadding="20dp"/>

</RelativeLayout><!-- From: file:/Users/leductuan/Work/studio/Common/commonFrame/src/main/res/layout/f001_fragment_example.xml -->