<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="10" >

    <LinearLayout
        android:id="@+id/options_dialog_button_ll_icon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/options_dialog_button_img_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:contentDescription="@string/options_dialog_button_icon_description" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/options_dialog_button_ll_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="7"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/options_dialog_button_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout><!-- From: file:/Users/leductuan/Work/studio/Common/common/commonFrame/src/main/res/layout/options_dialog_button.xml -->