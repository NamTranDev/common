<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_gravity="center" >

    <TextView
        android:id="@+id/alert_dialog_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/alert_dialog_tv_title_default"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/alert_dialog_tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/alert_dialog_tv_message_default" />

    <Button
        android:id="@+id/alert_dialog_bt_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/alert_dialog_bt_ok" />

    <ImageView
        android:id="@+id/alert_dialog_img_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alert_dialog_tv_title"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/alert_dialog_img_des" />

</RelativeLayout><!-- From: file:/Users/leductuan/Work/studio/Common/commonFrame/src/main/res/layout/alert_dialog.xml -->