<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.commonframe"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:maxSdkVersion="22"
        android:minSdkVersion="17"
        android:targetSdkVersion="22" />

    <application
        android:name="com.example.commonframe.util.CentralApplication"
        android:allowBackup="true"
        android:icon="@drawable/green_color"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.example.commonframe.BaseActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Accepts URIs that begin with "commonframe://start" -->
                <data
                    android:host="@string/deep_linking_app_host"
                    android:scheme="@string/deep_linking_app_scheme" />
                <!-- Accepts URIs that begin with "http://www.commonframe.com/start" -->
                <data
                    android:host="@string/deep_linking_http_host"
                    android:pathPrefix="start"
                    android:scheme="@string/deep_linking_http_scheme" />
            </intent-filter>
        </activity>
    </application>

</manifest>